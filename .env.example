# Decentralized Forum Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_SECRET_KEY=your-secret-key-here-min-32-chars-generate-with-secrets-token-urlsafe-32
APP_ENVIRONMENT=development  # development, staging, production
APP_DEBUG=true

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/forum_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# =============================================================================
# REDIS SETTINGS (Cache & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURITY_JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-generate-with-secrets-token-urlsafe-32
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION_MINUTES=30
SECURITY_SESSION_EXPIRATION_HOURS=720
SECURITY_BCRYPT_ROUNDS=12
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=30

# =============================================================================
# OAUTH2 PROVIDERS (Social Login)
# =============================================================================
# Meta/Facebook
OAUTH_META_CLIENT_ID=your-meta-client-id
OAUTH_META_CLIENT_SECRET=your-meta-client-secret
OAUTH_META_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/meta/callback
OAUTH_META_SCOPE=email,public_profile

# Reddit
OAUTH_REDDIT_CLIENT_ID=your-reddit-client-id
OAUTH_REDDIT_CLIENT_SECRET=your-reddit-client-secret
OAUTH_REDDIT_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/reddit/callback
OAUTH_REDDIT_SCOPE=identity,read

# X/Twitter
OAUTH_TWITTER_CLIENT_ID=your-twitter-client-id
OAUTH_TWITTER_CLIENT_SECRET=your-twitter-client-secret
OAUTH_TWITTER_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/twitter/callback
OAUTH_TWITTER_SCOPE=tweet.read,users.read

# Discord
OAUTH_DISCORD_CLIENT_ID=your-discord-client-id
OAUTH_DISCORD_CLIENT_SECRET=your-discord-client-secret
OAUTH_DISCORD_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/discord/callback
OAUTH_DISCORD_SCOPE=identify,email

# Telegram
OAUTH_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
OAUTH_TELEGRAM_BOT_USERNAME=your_bot_username

# =============================================================================
# IPFS / LIGHTHOUSE SETTINGS (Decentralized Storage)
# =============================================================================
IPFS_API_KEY=your-lighthouse-api-key
IPFS_UPLOAD_ENDPOINT=https://node.lighthouse.storage/api/v0/add
IPFS_GATEWAY_URL=https://gateway.lighthouse.storage/ipfs/
IPFS_MAX_FILE_SIZE_MB=50

# =============================================================================
# BLOCKCHAIN SETTINGS (BNB Chain)
# =============================================================================
PAYMENTS_METHOD=crypto
PAYMENTS_RECIPIENT_ADDRESS=0x0000000000000000000000000000000000000000  # YOUR BNB CHAIN ADDRESS
PAYMENTS_PANCAKESWAP_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E
PAYMENTS_BNB_CHAIN_RPC=https://bsc-dataseed.binance.org/
PAYMENTS_GAS_LIMIT=200000

# =============================================================================
# POINT ECONOMY SETTINGS
# =============================================================================
POINT_ECONOMY_REGISTRATION_BONUS=100
POINT_ECONOMY_CREATE_POST_COST=5
POINT_ECONOMY_CREATE_COMMENT_COST=2
POINT_ECONOMY_LIKE_COST=1
POINT_ECONOMY_CRYPTO_REWARD_COST=10000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ANONYMOUS_LIMIT=100
RATE_LIMIT_AUTHENTICATED_LIMIT=1000
RATE_LIMIT_MODERATOR_LIMIT=5000

# =============================================================================
# GENERATE SECURE SECRETS
# =============================================================================
# Run these commands to generate secure random secrets:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# python -c "import secrets; print(secrets.token_hex(32))"
